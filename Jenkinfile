pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/123-arya/task.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                cd /home/ubuntu/task
                source myenv/bin/activate
                pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                cd /home/ubuntu/task
                source myenv/bin/activate
                pytest
                '''
            }
        }

        stage('Deploy to Production') {
            steps {
                sh '''
                sudo systemctl restart webapp
                '''
            }
        }
    }
}
